{
    "name": "copy-current-file-path",
    "displayName": "copy-current-file-path",
    "description": "Pathify is an extension for Visual Studio Code that copies relative path of the current opened file into the clipboard.",
    "icon": "images/icon.png",
    "version": "0.0.2",
    "publisher": "florinionce",
    "engines": {
        "vscode": "^1.17.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.copyCurrentPath",
                "title": "Copy current path",
                "key": "ctrl+shift+space"
            }
        ]
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.5.2",
        "vscode": "^1.1.5",
        "mocha": "^3.5.0",
        "eslint": "^4.6.1",
        "@types/node": "^7.0.0",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "copy-paste": "^1.3.0",
        "vscode": "^1.1.5"
    }
}
